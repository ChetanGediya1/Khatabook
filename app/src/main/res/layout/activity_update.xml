<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EAE7E7"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#0453AF"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbar8">


        <ImageView
            android:id="@+id/left8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"/>

        <TextView
            android:id="@+id/toolbar_title8"
            android:layout_width="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Entry Details"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/h"
            android:layout_height="wrap_content"
            android:textSize="22dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/btnCalling"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_baseline_call_24" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/blue_bac"
        android:layout_below="@id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0453AF">

        <RelativeLayout
            android:layout_width="365dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/SRemak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="9dp"
                android:text="Pranav"
                android:textColor="@color/black"
                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SRemak"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/imageView"
                android:text="12 oct 22 - 08:30 PM"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/edtTotal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="60dp"
                android:background="#F4F2F2" />

            <TextView
                android:id="@+id/SRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Running Balance"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/edtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTotal2"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="120dp"
                android:background="#F4F2F2" />

            <TextView
                android:id="@+id/SDea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:textStyle="bold"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20dp"
                android:text="Deatails"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/edtDeatails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:textSize="20dp" />


        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/buttonbac"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#093E07"
            android:text="        Update | Delete       " />

<!--        <Button-->
<!--            android:id="@+id/btnDelete"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="55dp"-->
<!--            android:backgroundTint="#D61414"-->
<!--            android:text="      Delete      " />-->


    </RelativeLayout>


    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/blue_bac"
        android:layout_marginStart="95dp"
        android:src="@drawable/secure_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/blue_bac"

        android:layout_marginStart="155dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="100% Safe and Secure"
        android:textColor="#093E07" />

</RelativeLayout>