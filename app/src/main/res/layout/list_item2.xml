<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btnTranstion"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/white_bac"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Sdate"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/Stime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Sdate"
            android:layout_marginLeft="22dp"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/Scus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Hello brothet js js x x sjxxjdjdndfdbdjddbdjbdjdbjdjbfdjbdbdbjdjbddjjbddfbs"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <RelativeLayout
            android:id="@+id/q"
            android:layout_width="70dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/green_bac"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/Sama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#093E07"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_toStartOf="@id/q"
            android:background="@drawable/red_bac"

            android:layout_height="match_parent">


            <TextView
                android:id="@+id/Sama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="18dp"
                android:textColor="#D61414"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>