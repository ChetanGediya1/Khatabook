<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:id="@+id/user"
    android:layout_height="wrap_content">






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pranav"
        android:textStyle="bold"
        android:textSize="17dp"

        android:textColor="@color/black"
        android:layout_marginLeft="60dp"

        android:id="@+id/Sname"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Sname"
        android:layout_marginTop="5dp"
        android:text="9979967663"
        android:id="@+id/Smobile"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="6789"
        android:layout_toEndOf="@id/rupee"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"

        android:layout_marginTop="13dp"
        android:textStyle="bold"

        android:textColor="#2A7104"
        android:layout_height="wrap_content"
        android:id="@+id/Sbill"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/Smobile"
        android:layout_toEndOf="@id/imageView"

        android:background="#9F9E9E"/>
    <ImageView
        android:id="@+id/rupee"
        android:layout_marginTop="15dp"
        android:layout_width="15dp"
        android:layout_marginLeft="300dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/rupee" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_toEndOf="@id/rupee"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/user" />


</RelativeLayout>