<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD8D8"
    tools:context=".UserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/blueBox"
        android:background="#0453AF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
  android:background="@drawable/button"
            android:layout_marginStart="10dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/blueBox"
        android:layout_centerInParent="true"
        android:background="@drawable/moneybutton"
        android:gravity="center">


        <ImageView
            android:id="@+id/call"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pdf" />

        <ImageView
            android:id="@+id/call2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toEndOf="@id/call"
            android:src="@drawable/pay" />

        <ImageView
            android:id="@+id/call3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toEndOf="@id/call2"
            android:src="@drawable/whats" />

        <ImageView
            android:id="@+id/call4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toEndOf="@id/call3"
            android:src="@drawable/not" />


    </RelativeLayout>


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#0453AF"
        android:layout_height="?actionBarSize"
        android:id="@+id/tool">




        <ImageView
            android:id="@+id/h"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"/>

        <TextView
            android:id="@+id/tooltitle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="35dp"
            android:textStyle="bold"
            android:text="Add Payment"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/h"

            android:layout_height="wrap_content"
            android:textSize="25dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <ImageView
                android:id="@+id/calling"
                android:layout_width="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_call_24"/>
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">




    <Button
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/debit"
        android:layout_marginLeft="20dp"
        android:layout_height="55dp"
        android:backgroundTint="#093E07"
        android:text="     YOU GOT ₹   "/>
        <Button
            android:id="@+id/debit"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#D61414"
            android:text="   You GAVE ₹   "/>


    </RelativeLayout>





</RelativeLayout>